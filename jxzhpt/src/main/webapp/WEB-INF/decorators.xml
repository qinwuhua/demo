<?xml version="1.0" encoding="UTF-8"?>
<!-- defaultdir指定装饰器文件所在的路径-->
<decorators defaultdir="/page/decorators">
 	<!--在excludes元素下指定的页面将不会由SiteMesh来装饰-->
   <excludes>
        <pattern>/css/*</pattern>
        <pattern>/image/*</pattern>
        <pattern>/js/*</pattern>
        <pattern>/widget/*</pattern>
        <pattern>/page/common/*</pattern>
        <pattern>/page/excludes/*</pattern>
   </excludes>
   <!-- 出行策划装饰器 -->
   <decorator name="main" page="main.jsp">
   		<pattern>/page/user/*</pattern>
   </decorator>
   	<!--定义一个装饰器,左侧不包含head页面-->
   <decorator name="panel" page="panel.jsp"/>
</decorators>
